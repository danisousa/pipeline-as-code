#!groovy
@Library('pipeline-as-code') _

pipeline {
  agent {
    kubernetes {
    label 'maven-pipeline-pod'
    yaml """
    apiVersion: v1
    kind: Pod
    metadata:
      labels:
        some-label: some-label-value
    spec:
      containers:
      - name: maven
        image: maven:3-alpine
        command:
        - cat
        tty: true
      - name: python
        image: python:3-slim
        command:
        - cat
        tty: true
    """
    }
  }
  environment {
     FOO = "foo"
  }
  stages {
    stage("Maven Tree") {
      steps{
        container('maven'){
          script{
            sh 'mvn dependency:tree -DoutputType=graphml -DoutputFile=out.gml'
          }
        }
      }
    }
	stage("Upload ArangoDB"){
      steps{
        container('python'){
          script{
		    setup-python()
			echo 'Python container ready to connect to DB...'
            sh 'python python-utils/maven_arango.py'
          }
        }
      }
	}
  }
}
