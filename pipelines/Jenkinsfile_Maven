#!groovy
@Library('pipeline-as-code') _

pipeline {
  agent {
    kubernetes {
    label 'maven-pipeline-pod'
    yaml """
    apiVersion: v1
    kind: Pod
    metadata:
      labels:
        name: node-pod
    spec:
      containers:
      - name: maven
        image: maven:3-alpine
        command:
        - cat
        tty: true
      - name: python
        image: python:3-slim
        command:
        - cat
        tty: true
    """
    }
  }
  environment {
    REPO_NAME = "${env.GIT_URL.tokenize('/')[-1].replace('.git', '')}"
    branch = "${env.GIT_BRANCH}"  
  }
  stages {
    stage("Maven Tree") {
      steps{
        container('maven'){
          script{
            echo "${env.branch}"
            sh (returnStdout: true, label: "[Writting dependency tree", script: "mvn dependency:tree -DoutputType=graphml -DoutputFile=out.gml")
          }
        }
      }
    }
    stage("Upload ArangoDB"){
      steps{
        container('python'){
          script{
	    configurePython()
            sh 'python python-utils/maven_arango.py'
          }
        }
      }
    }
  }
}
