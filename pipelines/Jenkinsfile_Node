#!groovy
@Library('pipeline-as-code') _

pipeline {
  agent {
    kubernetes {
    label 'node-pipeline-pod'
    yaml """
    apiVersion: v1
    kind: Pod
    metadata:
      labels:
        name: node-pod
    spec:
      containers:
      - name: node
        image: node:14.2.0-stretch-slim
        command:
        - cat
        tty: true
      - name: python
        image: python:3-slim
        command:
        - cat
        tty: true
    """
    }
  }
  environment {
     FOO = "foo"
  }
  stages {
    stage("Install") {
      steps{
        container('node'){
          script{
            sh (returnStdout: true, label: "Installing dependencies", script: "npm install")
          }
        }
      }
    }
    stage("Node Tree") {
      steps{
        container('node'){
          script{
            sh (returnStdout: true, label: "[Writting dependency tree", script: "npm -json list > outfile.json")
          }
        }
      }
    }    stage("Upload ArangoDB"){
      steps{
        container('python'){
          script{
	    configurePython()
            sh 'python python-utils/node_arango.py'
          }
        }
      }
    }
  }
}
